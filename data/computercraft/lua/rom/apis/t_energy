function T_ResetParameters()
    enterprise_energy.ResetParameters()
end

function T_FuelNeed_Refuel_Att()
    -- prepare test
    corelog.WriteToLog("# Test FuelNeed_Refuel_Att")
    local forest = enterprise_woods.GetForest()
    local originalForestLevel = forest.forestLevel
    local originalNTrees = forest.nTrees
    enterprise_woods.UpdateForest_SSrv({ forestLevel = 0, nTrees = 1 })
    local location = coremove.GetLocation()
    t_factory.StartNewV0Site(location)

    -- test
    local fuelNeed = enterprise_energy.FuelNeed_Refuel_Att()
    corelog.WriteToLog("   "..fuelNeed.." fuelNeed")

    -- cleanup test
    enterprise_woods.UpdateForest_SSrv({ forestLevel = originalForestLevel, nTrees = originalNTrees })
    t_factory.StopV0Site(location)
end

function T_RefuelAmount_AttL0()
    -- prepare test
    corelog.WriteToLog("# Test RefuelAmount_Att")
    local energy = enterprise_energy.GetParameters()
    local originalLevel = energy.enterpriseLevel
    enterprise_energy.UpdateEnterprise_SSrv({ enterpriseLevel = 0 })

    -- test
    local refuelAmount = enterprise_energy.RefuelAmount_Att()
    corelog.WriteToLog("   "..refuelAmount.." refuelAmount")

    -- cleanup test
    enterprise_energy.UpdateEnterprise_SSrv({ enterpriseLevel = originalLevel })
end

function T_RefuelAmount_AttL1()
    -- prepare test
    corelog.WriteToLog("# Test RefuelAmount_Att")
    local energy = enterprise_energy.GetParameters()
    local originalLevel = energy.enterpriseLevel
    enterprise_energy.UpdateEnterprise_SSrv({ enterpriseLevel = 1 })

    -- test
    local refuelAmount = enterprise_energy.RefuelAmount_Att()
    corelog.WriteToLog("   "..refuelAmount.." refuelAmount")

    -- cleanup test
    enterprise_energy.UpdateEnterprise_SSrv({ enterpriseLevel = originalLevel })
end
