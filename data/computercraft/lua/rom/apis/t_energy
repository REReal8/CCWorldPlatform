function T_ResetParameters()
    enterprise_energy.ResetParameters()
end

function T_FuelNeed_Refuel_Att()
    -- prepare test
    corelog.WriteToLog("# Test FuelNeed_Refuel_Att")
    local forest = enterprise_colonization.GetForest()
    local originalNTrees = forest.nTrees
    enterprise_colonization.UpdateForestInfo_SSrv({ forestNTrees = 1 })
    local location = coremove.GetLocation()
    t_factory.StartNewV0Site(location)

    -- test
    local fuelNeed = enterprise_energy.FuelNeed_Refuel_Att()
    corelog.WriteToLog("   "..fuelNeed.." fuelNeed")

    -- cleanup test
    enterprise_colonization.UpdateForestInfo_SSrv({ forestNTrees = originalNTrees })
    t_factory.StopV0Site(location)
end

function T_RefuelAmount_Att()
    -- prepare test
    corelog.WriteToLog("# Test RefuelAmount_Att")

    -- test
    local refuelAmount = enterprise_energy.RefuelAmount_Att()
    corelog.WriteToLog("   "..refuelAmount.." refuelAmount")

    -- cleanup test
end
