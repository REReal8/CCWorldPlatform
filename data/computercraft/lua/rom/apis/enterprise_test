--   | |/ _ \ / __/ _` | | |  _| | | | '_ \ / __| __| |/ _ \| '_ \/ __|
--   | | (_) | (_| (_| | | | | | |_| | | | | (__| |_| | (_) | | | \__ \
--   |_|\___/ \___\__,_|_| |_|  \__,_|_| |_|\___|\__|_|\___/|_| |_|___/

function ATaskFunc1(taskArgumentTable)
    print("enterprise_test.ATaskFunc1("..textutils.serialise(taskArgumentTable)..").")

    return taskArgumentTable.arg1
end

function ACallBackFunc1(taskArgumentTable, testResult)
    print("enterprise_test.ACallBackFunc1("..textutils.serialise(taskArgumentTable)..", "..textutils.serialise(testResult)..").")

    return taskArgumentTable.arg1
end

