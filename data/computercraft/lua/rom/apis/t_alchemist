local baseLocationV1 = {x=12, y= 0, z= 1, dx=0, dy=1}

function T_Craft_Task()
    local craftData = {
        recipe = {
            [6]         = { itemName = "minecraft:birch_log", itemCount = 1 },
           yield        = 4
        },
        productItemName = "minecraft:birch_planks",
        productItemCount= 4,
        workingLocation = coremove.GetRelativeLocation(baseLocationV1, 3, 3, -4),
    }

    local result = role_alchemist.Craft_Task(craftData)
    corelog.WriteToLog("  result="..textutils.serialize(result))
end

function T_Smelt_Task()
    local smeltData = {
        recipe = {
            itemName    = "minecraft:birch_log",
            yield       = 1
        },
        productItemCount= 3,
        workingLocation = coremove.GetRelativeLocation(baseLocationV1, 3, 3, -3),
        fuelItemName    = "minecraft:birch_planks",
        fuelItemCount   = 3,
    }

    local result = role_alchemist.Smelt_Task(smeltData)
    corelog.WriteToLog("  result="..textutils.serialize(result))
end

function T_Pickup_Task()
    local pickupData = {
        productItemName = "minecraft:charcoal",
        productItemCount= 3,
        workingLocation = coremove.GetRelativeLocation(baseLocationV1, 3, 3, -3),
    }

    local result = role_alchemist.Pickup_Task(pickupData)
    corelog.WriteToLog("  result="..textutils.serialize(result))
end
