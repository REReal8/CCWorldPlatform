local baseLocationV0 = {x=6, y= 0, z= 1, dx=0, dy=1}
local baseLocationV1 = {x=12, y= 0, z= 1, dx=0, dy=1}

function T_BuildAndStartNewV0Site_service()
    enterprise_factory.BuildAndStartNewSite_ASrv({baseLocation = baseLocationV0, siteVersion="v0"}, "coreassignment.Dummy_Callback", {"some callback data"})
end

function T_BuildNewV0Site_service()
    enterprise_factory.BuildNewSite_ASrv({baseLocation = baseLocationV0, siteVersion="v0"}, "coreassignment.Dummy_Callback", {"some callback data"})
end

function T_BuildNewV1Site_service()
    enterprise_factory.BuildNewSite_ASrv({baseLocation = baseLocationV1, siteVersion="v1"}, "coreassignment.Dummy_Callback", {"some callback data"})
end

function T_StartNewSite_service()
    enterprise_factory.StartNewSite_SSrv({baseLocation = baseLocationV1, siteVersion="v1", siteAlreadyBuild=true}, "coreassignment.Dummy_Callback", {"some callback data"})
end

function T_StopAndDismantleV0Site_service()
    enterprise_factory.StopAndDismantleSite_ASrv({baseLocation = baseLocationV0, siteVersion="v0"}, "coreassignment.Dummy_Callback", {"some callback data"})
end

function T_DismantleV0Site_service()
    enterprise_factory.DismantleSite_ASrv({baseLocation = baseLocationV0, siteVersion="v0", siteStopped=true}, "coreassignment.Dummy_Callback", {"some callback data"})
end

function T_StopV0Site_service()
    enterprise_factory.StopSite_ASrv({baseLocation = baseLocationV0, siteVersion="v0"}, "coreassignment.Dummy_Callback", {"some callback data"})
end

function T_DeleteSites()
    enterprise_factory.DeleteSites()
end

function T_ProduceItem_service_Craft()
    local callbackFunction = "t_main.Func1_Callback"
    local callbackData = {"some callback data"}

    enterprise_factory.ProduceItem_ASrv({
        itemName                = "minecraft:birch_planks",
        itemAmount              = 12,
        ingredientsHostLocator = enterprise_turtle.GetTurtleLocator_SSrv({ })
    }, callbackFunction, callbackData)
end

function T_ProduceItem_service_Smelt()
    local callbackFunction = "t_main.Func1_Callback"
    local callbackData = {"some callback data"}

    enterprise_factory.ProduceItem_ASrv({
        itemName                = "minecraft:charcoal",
        itemAmount              = 3,
        ingredientsHostLocator = enterprise_turtle.GetTurtleLocator_SSrv({ })
    }, callbackFunction, callbackData)
end

function T_Craft_Task()
    local craftData = { -- produce "minecraft:birch_planks"
        recipe = {
            [6]         = { itemName = "minecraft:birch_log", itemCount = 1 },
           yield        = 4
        },
        itemCount       = 4,
        workingLocation = coremove.GetRelativeLocation(baseLocationV1, 3, 3, -4),
    }

    role_alchemist.Craft_Task(craftData)
end

function T_Smelt_Task()
    local smeltData = { -- produce ""minecraft:charcoal"
        recipe = {
            itemName    = "minecraft:birch_log",
            yield       = 1
        },
        itemCount       = 3,
        workingLocation = coremove.GetRelativeLocation(baseLocationV1, 3, 3, -3),
        fuelItemName    = "minecraft:birch_planks",
        fuelItemCount   = 3,
    }

    role_alchemist.Smelt_Task(smeltData)
end

function T_Pickup_Task()
    local pickupData = {
        workingLocation = coremove.GetRelativeLocation(baseLocationV1, 3, 3, -3),
    }

    role_alchemist.Pickup_Task(pickupData)
end
