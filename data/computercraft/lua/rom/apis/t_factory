local baseLocationV0 = {x=6, y= 0, z= 1, dx=0, dy=1}
local baseLocationV1 = {x=12, y= 0, z= 1, dx=0, dy=1}

function T_ProduceItem_service_Craft()
    local callbackFunction = "t_main.Func1_Callback"
    local callbackData = {"some callback data"}

    enterprise_factory.ProduceItem_ASrv({
        itemName                = "minecraft:birch_planks",
        itemAmount              = 12,
        ingredientsHostLocator  = enterprise_turtle.GetISHURL_SSrv({ })
    }, callbackFunction, callbackData)
end

function T_ProduceItem_service_Smelt()
    local callbackFunction = "t_main.Func1_Callback"
    local callbackData = {"some callback data"}

    enterprise_factory.ProduceItem_ASrv({
        itemName                = "minecraft:charcoal",
        itemAmount              = 3,
        ingredientsHostLocator  = enterprise_turtle.GetISHURL_SSrv({ })
    }, callbackFunction, callbackData)
end

function T_BuildAndStartNewV1Site_service()
    enterprise_factory.BuildAndStartNewSite_ASrv({
        baseLocation            = baseLocationV1,
        siteVersion             = "v1",
        upgrade                 = false,
        materialsHostLocator    = enterprise_turtle.GetISHURL_SSrv({ }).url
    }, "t_main.Func1_Callback", {"some callback data"})
end

function T_StopAndDismantleV1Site_service()
    enterprise_factory.StopAndDismantleSite_ASrv({
        baseLocation            = baseLocationV1,
        siteVersion             = "v1",
        materialsHostLocator    = enterprise_turtle.GetISHURL_SSrv({ }).url
    }, "t_main.Func1_Callback", {"some callback data"})
end

function T_BuildNewV0Site_service()
    enterprise_factory.BuildNewSite_ASrv({
        baseLocation            = baseLocationV0,
        siteVersion             = "v0",
        upgrade                 = false,
        materialsHostLocator    = enterprise_turtle.GetISHURL_SSrv({ }).url
    }, "t_main.Func1_Callback", {"some callback data"})
end

function T_StartNewV0Site_service()
    enterprise_factory.StartNewSite_SSrv({
        baseLocation        = baseLocationV0,
        siteVersion         = "v0",
        siteAlreadyBuild    = true
    }, "t_main.Func1_Callback", {"some callback data"})
end

function T_DismantleV0Site_service()
    enterprise_factory.DismantleSite_ASrv({
        baseLocation            = baseLocationV0,
        siteVersion             = "v0",
        siteStopped             = true,
        materialsHostLocator    = enterprise_turtle.GetISHURL_SSrv({ }).url
    }, "t_main.Func1_Callback", {"some callback data"})
end

function T_StopV0Site_service()
    enterprise_factory.StopSite_ASrv({
        baseLocation    = baseLocationV0,
        siteVersion     = "v0"
    }, "t_main.Func1_Callback", {"some callback data"})
end

function T_DeleteSites()
    enterprise_factory.DeleteSites()
end
