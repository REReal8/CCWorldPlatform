local baseLocationV0 = {x=6, y= 0, z= 1, dx=0, dy=1}
local baseLocationV1 = {x=12, y= 0, z= 1, dx=0, dy=1}

function T_BuildAndStartNewV0Site_service()
    enterprise_factory.BuildAndStartNewSite({baseLocation = baseLocationV0, siteVersion="v0"}, "coreassignment.Dummy_Callback", {"some callback data"})
end

function T_BuildNewV0Site_service()
    enterprise_factory.BuildNewSite({baseLocation = baseLocationV0, siteVersion="v0"}, "coreassignment.Dummy_Callback", {"some callback data"})
end

function T_BuildNewV1Site_service()
    enterprise_factory.BuildNewSite({baseLocation = baseLocationV1, siteVersion="v1"}, "coreassignment.Dummy_Callback", {"some callback data"})
end

function T_StartNewSite_service()
    enterprise_factory.StartNewSite({baseLocation = baseLocationV1, siteVersion="v1", siteAlreadyBuild=true}, "coreassignment.Dummy_Callback", {"some callback data"})
end

function T_DismantleV0Site_service()
    enterprise_factory.DismantleSite({baseLocation = baseLocationV0, siteVersion="v0"}, "coreassignment.Dummy_Callback", {"some callback data"})
end

function T_RemoveSites()
    enterprise_factory.RemoveSites()
end

function T_ProduceItem_service_Craft()
    enterprise_factory.ProduceItem({itemName = "minecraft:birch_planks", itemAmount=12}, "coreassignment.Dummy_Callback", {"some callback data"})
end

function T_ProduceItem_service_Smelt()
    enterprise_factory.ProduceItem({itemName = "minecraft:charcoal", itemAmount=3}, "coreassignment.Dummy_Callback", {"some callback data"})
end

function T_Craft_Task()
    local craftData = { -- produce "minecraft:birch_planks"
        recipe = {
            [6]         = { itemName = "minecraft:birch_log", itemCount = 1 },
           yield        = 4
        },
        itemCount       = 4,
        workingLocation = coremove.GetRelativeLocation(baseLocationV1, 3, 3, -4),
    }

    role_alchemist.Craft_Task(craftData)
end

function T_Smelt_Task()
    local smeltData = { -- produce ""minecraft:charcoal"
        recipe = {
            itemName    = "minecraft:birch_log",
            yield       = 1
        },
        itemCount       = 3,
        workingLocation = coremove.GetRelativeLocation(baseLocationV1, 3, 3, -3),
        fuelItemName    = "minecraft:birch_planks",
        fuelItemCount   = 3,
    }

    role_alchemist.Smelt_Task(smeltData)
end

function T_Pickup_Task()
    local pickupData = {
        workingLocation = coremove.GetRelativeLocation(baseLocationV1, 3, 3, -3),
    }

    role_alchemist.Pickup_Task(pickupData)
end
