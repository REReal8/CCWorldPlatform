local db = {
    forestLocation      = {x= 0, y= 0, z= 1, dx=0, dy=1},
    nTrees = 1,
}

--                _     _ _         __                  _   _
--               | |   | (_)       / _|                | | (_)
--    _ __  _   _| |__ | |_  ___  | |_ _   _ _ __   ___| |_ _  ___  _ __  ___
