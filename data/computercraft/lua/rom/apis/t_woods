local dhtRoot     = "enterprise_colonization"
local dhtForest   = "forest"

function T_DeleteForests()
    enterprise_woods.DeleteForests()
end

function T_FuelNeed_Harvest_Att()
    -- prepare test
    corelog.WriteToLog("# Test FuelNeed_Harvest_Att")
    local forest = enterprise_woods.GetForest()
    local originalForestLevel = forest.forestLevel
    local originalNTrees = forest.nTrees
    enterprise_woods.UpdateForest_SSrv({ forestLevel = 0, nTrees = 1 })

    -- test
    local fuelNeed = enterprise_woods.FuelNeed_Harvest_Att()
    corelog.WriteToLog("   "..fuelNeed.." fuelNeed")

    -- cleanup test
    enterprise_woods.UpdateForest_SSrv({ forestLevel = originalForestLevel, nTrees = originalNTrees })
end

