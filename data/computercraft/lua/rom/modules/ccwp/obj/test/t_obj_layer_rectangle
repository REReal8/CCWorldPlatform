function T_LayerRectangle.T_IsSameCodeMap()
    -- prepare test
    corelog.WriteToLog("* LayerRectangle.IsSameCodeMap() tests")
    local codeMap2 = {
        [6] = "CD   ?",
        [5] = "      ",
        [4] = "T  S  ",
        [3] = "  ?   ",
        [2] = "      ",
        [1] = "   T  ",
    }

    -- test same
    local isSame = LayerRectangle.IsSameCodeMap(codeMap1, codeMap2)
    local expectedIsSame = true
    assert(isSame == expectedIsSame, "gotten IsSameCodeMap(="..tostring(isSame)..") not the same as expected(="..tostring(expectedIsSame)..")")

    -- test different
    codeMap2[4] = "TTTSTT"
    isSame = LayerRectangle.IsSameCodeMap(codeMap1, codeMap2)
    expectedIsSame = false
    assert(isSame == expectedIsSame, "gotten IsSameCodeMap(="..tostring(isSame)..") not the same as expected(="..tostring(expectedIsSame)..")")
    codeMap2[4] = "T  S  "

    -- test different (size)
    codeMap2[7] = "TT  TT"
    isSame = LayerRectangle.IsSameCodeMap(codeMap1, codeMap2)
    expectedIsSame = false
    assert(isSame == expectedIsSame, "gotten IsSameCodeMap(="..tostring(isSame)..") not the same as expected(="..tostring(expectedIsSame)..")")
    codeMap2[7] = nil

    -- cleanup test
end

