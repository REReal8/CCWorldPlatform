local T_Silo = {}
local corelog = require "corelog"
local coreutils = require "coreutils"
local coremove = require "coremove"

local role_fuel_worker = require "role_fuel_worker"

local Callback = require "obj_callback"
local Location = require "obj_location"
local Inventory = require "obj_inventory"
local URL = require "obj_url"

local Silo = require "mobj_silo"

local enterprise_turtle = require "enterprise_turtle"
local enterprise_chests = require "enterprise_chests"

function T_Silo.T_All()
    -- base methods
    T_Silo.T_Getters()
    T_Silo.T_IsOfType()
    T_Silo.T_isSame()
    T_Silo.T_copy()

    -- service methods
    T_Silo.T_needsTo_ProvideItemsTo_SSrv()
    T_Silo.T_can_ProvideItems_QSrv()
end

local location1  = Location:new({_x= -6, _y= 0, _z= 1, _dx=0, _dy=1})
local location2  = Location:new({_x= -6, _y= 6, _z= 1, _dx=0, _dy=1})
local accessDirection1 = "top"
local inventory1 = Inventory:new() -- ToDo: add elements

local compact = { compact = true }

--    _                                     _   _               _
--   | |                                   | | | |             | |
--   | |__   __ _ ___  ___   _ __ ___   ___| |_| |__   ___   __| |___
--   | '_ \ / _` / __|/ _ \ | '_ ` _ \ / _ \ __| '_ \ / _ \ / _` / __|
--   | |_) | (_| \__ \  __/ | | | | | |  __/ |_| | | | (_) | (_| \__ \
--   |_.__/ \__,_|___/\___| |_| |_| |_|\___|\__|_| |_|\___/ \__,_|___/

function T_Silo.T_Getters()
    -- prepare test
    corelog.WriteToLog("* Silo getter tests")
    local id = coreutils.NewId()
    local silo = T_Silo.CreateSilo(location1, accessDirection1, inventory1, id) if not silo then corelog.Error("failed obtaining Silo") return end

    -- test
    assert(silo:getId() == id, "gotten id(="..silo:getId()..") not the same as expected(="..id..")")
    assert(silo:getLocation() == location1, "gotten getLocation(="..textutils.serialize(silo:getId())..") not the same as expected(="..textutils.serialize(location1)..")")
    assert(silo:getAccessDirection() == accessDirection1, "gotten getAccessDirection(="..silo:getAccessDirection()..") not the same as expected(="..accessDirection1..")")
    assert(silo:getInventory():isSame(inventory1), "gotten getInventory(="..textutils.serialize(silo:getInventory(), compact)..") not the same as expected(="..textutils.serialize(inventory1, compact)..")")

    -- cleanup test
end

function T_Silo.CreateSilo(location, accessDirection, inventory, id)
    -- check input
    location = location or location1
    id = id or coreutils.NewId()
    accessDirection = accessDirection or accessDirection1
    inventory = inventory or inventory1

    -- create Silo object
    local silo = Silo:new({
        _id                     = id,

        _location               = location,
        _accessDirection        = accessDirection,
        _inventory              = inventory,
    })

    -- end
    return silo
end

function T_Silo.T_IsOfType()
    -- prepare test
    corelog.WriteToLog("* Silo.IsOfType() tests")
    local silo = T_Silo.CreateSilo() if not silo then corelog.Error("failed obtaining Silo") return end

    -- test valid
    local isOfType = Silo.IsOfType(silo)
    local expectedIsOfType = true
    assert(isOfType == expectedIsOfType, "gotten IsOfType(="..tostring(isOfType)..") not the same as expected(="..tostring(expectedIsOfType)..")")

    -- test different object
    isOfType = Silo.IsOfType("a atring")
    expectedIsOfType = false
    assert(isOfType == expectedIsOfType, "gotten IsOfType(="..tostring(isOfType)..") not the same as expected(="..tostring(expectedIsOfType)..")")

    -- test invalid _location
    silo._location = "a string"
    isOfType = Silo.IsOfType(silo)
    expectedIsOfType = false
    assert(isOfType == expectedIsOfType, "gotten IsOfType(="..tostring(isOfType)..") not the same as expected(="..tostring(expectedIsOfType)..")")
    silo._location = location1

    -- test invalid _accessDirection
    silo._accessDirection = 20
    isOfType = Silo.IsOfType(silo)
    expectedIsOfType = false
    assert(isOfType == expectedIsOfType, "gotten IsOfType(="..tostring(isOfType)..") not the same as expected(="..tostring(expectedIsOfType)..")")
    silo._accessDirection = accessDirection1

    -- test invalid _inventory
    silo._inventory = 20
    isOfType = Silo.IsOfType(silo)
    expectedIsOfType = false
    assert(isOfType == expectedIsOfType, "gotten IsOfType(="..tostring(isOfType)..") not the same as expected(="..tostring(expectedIsOfType)..")")
    silo._inventory = inventory1

    -- cleanup test
end

function T_Silo.T_isSame()
    -- prepare test
    corelog.WriteToLog("* Silo:isSame() tests")
    local id = coreutils.NewId()
    local silo = T_Silo.CreateSilo(location1, accessDirection1, inventory1, id) if not silo then corelog.Error("failed obtaining Silo") return end

    -- test same
    local silo1 = T_Silo.CreateSilo(location1, accessDirection1, inventory1, id)
    local isSame = silo1:isSame(silo)
    local expectedIsSame = true
    assert(isSame == expectedIsSame, "gotten isSame(="..tostring(isSame)..") not the same as expected(="..tostring(expectedIsSame)..")")

    -- test different _location
    silo._location = Location:new({_x= 100, _y= 0, _z= 100, _dx=0, _dy=1})
    isSame = silo1:isSame(silo)
    expectedIsSame = false
    assert(isSame == expectedIsSame, "gotten isSame(="..tostring(isSame)..") not the same as expected(="..tostring(expectedIsSame)..")")
    silo._location = location1

    -- test different _accessDirection
    silo._accessDirection = "bottom"
    isSame = silo1:isSame(silo)
    expectedIsSame = false
    assert(isSame == expectedIsSame, "gotten isSame(="..tostring(isSame)..") not the same as expected(="..tostring(expectedIsSame)..")")
    silo._accessDirection = accessDirection1

    -- test different _itemsInventory
    silo._inventory = { "ToDo: add some elements here" } -- ToDo
    isSame = silo1:isSame(silo)
    expectedIsSame = false
    assert(isSame == expectedIsSame, "gotten isSame(="..tostring(isSame)..") not the same as expected(="..tostring(expectedIsSame)..")")
    silo._inventory = inventory1

    -- cleanup test
end

function T_Silo.T_copy()
    -- prepare test
    corelog.WriteToLog("* Silo:copy() tests")
    local silo = T_Silo.CreateSilo(location1, accessDirection1, inventory1) if not silo then corelog.Error("failed obtaining Silo") return end

    -- test
    local copy = silo:copy()
    assert(copy:isSame(silo), "gotten copy(="..textutils.serialize(copy, compact)..") not the same as expected(="..textutils.serialize(silo, compact)..")")

    -- cleanup test
end

--                        _                           _   _               _
--                       (_)                         | | | |             | |
--    ___  ___ _ ____   ___  ___ ___   _ __ ___   ___| |_| |__   ___   __| |___
--   / __|/ _ \ '__\ \ / / |/ __/ _ \ | '_ ` _ \ / _ \ __| '_ \ / _ \ / _` / __|
--   \__ \  __/ |   \ V /| | (_|  __/ | | | | | |  __/ |_| | | | (_) | (_| \__ \
--   |___/\___|_|    \_/ |_|\___\___| |_| |_| |_|\___|\__|_| |_|\___/ \__,_|___/

local function provideItemsTo_ASrv_Test(itemDepotLocator, toStr)
    -- prepare test (cont)
    corelog.WriteToLog("* Silo:provideItemsTo_ASrv() test (to "..toStr..")")
    local silo = T_Silo.CreateSilo(location1:getRelativeLocation(2, 5, 0)) if not silo then corelog.Error("failed obtaining silo") return end
    --note: as a test short cut we do not have to set the Inventory content here. We just assume the test Silo is present. FetchItemsFromSiloIntoTurtle_Task should make sure the inventory is obtained
    local siloLocator = enterprise_chests.GetSiloLocator(silo:getId())

    local provideItems = {
        ["minecraft:birch_log"]  = 5,
    }
    local expectedDestinationItemsLocator = itemDepotLocator:copy()
    expectedDestinationItemsLocator:setQuery(provideItems)
    local callback = Callback:new({
        _moduleName     = "T_Silo",
        _methodName     = "provideItemsTo_ASrv_Callback",
        _data           = {
            ["expectedDestinationItemsLocator"] = expectedDestinationItemsLocator,
            ["siloLocator"]                    = siloLocator,
            ["itemDepotLocator"]                = itemDepotLocator,
        },
    })

    -- test
    local scheduleResult = silo:provideItemsTo_ASrv({
        provideItems    = provideItems,
        itemDepotLocator= itemDepotLocator,
    }, callback)
    assert(scheduleResult == true, "failed to schedule async service")
end

function T_Silo.T_provideItemsTo_ASrv_Turtle()
    -- prepare test
    local itemDepotLocator = enterprise_turtle.GetHostLocator_Att()
    itemDepotLocator:setPort(os.getComputerID())

    -- test
    provideItemsTo_ASrv_Test(itemDepotLocator, "Turtle")
end

function T_Silo.T_provideItemsTo_ASrv_Silo()
    -- prepare test
    local silo2 = T_Silo.CreateSilo(location2:getRelativeLocation(2, 5, 0)) if not silo2 then corelog.Error("failed obtaining silo 2") return end
    local itemDepotLocator = enterprise_chests.SaveSilo(silo2)

    -- test
    provideItemsTo_ASrv_Test(itemDepotLocator, "Silo")
end

function T_Silo.provideItemsTo_ASrv_Callback(callbackData, serviceResults)
    -- test (cont)
    assert(serviceResults.success, "failed executing async service")

    local destinationItemsLocator = URL:new(serviceResults.destinationItemsLocator)
    local expectedDestinationItemsLocator = URL:new(callbackData["expectedDestinationItemsLocator"])
    assert(destinationItemsLocator:isSame(expectedDestinationItemsLocator), "gotten destinationItemsLocator(="..textutils.serialize(destinationItemsLocator, compact)..") not the same as expected(="..textutils.serialize(expectedDestinationItemsLocator, compact)..")")

    -- cleanup test
    local siloLocator = callbackData["siloLocator"]
    enterprise_chests.RemoveSilo(siloLocator)
    local itemDepotLocator = callbackData["itemDepotLocator"]
    if enterprise_chests.IsSiloURL_QSrv({ aURL = itemDepotLocator}).success then
        enterprise_chests.RemoveSilo(itemDepotLocator)
    end

    -- end
    return true
end

local function storeItemsFrom_ASrv_Test(itemsLocator, toStr)
    -- prepare test (cont)
    corelog.WriteToLog("* Silo:storeItemsFrom_ASrv() test (to "..toStr..")")
    local silo = T_Silo.CreateSilo(location1:getRelativeLocation(2, 5, 0)) if not silo then corelog.Error("failed obtaining silo") return end
    --note: as a test short cut we do not have to set the Inventory content here. We just assume the test Silo is present. FetchItemsFromSiloIntoTurtle_Task should make sure the inventory is obtained
    local siloLocator = enterprise_chests.GetSiloLocator(silo:getId())

    local provideItems = {
        ["minecraft:birch_log"]  = 5,
    }
    itemsLocator:setQuery(provideItems)

    local expectedDestinationItemsLocator = siloLocator:copy()
    expectedDestinationItemsLocator:setQuery(provideItems)
    local callback = Callback:new({
        _moduleName     = "T_Silo",
        _methodName     = "storeItemsFrom_ASrv_Callback",
        _data           = {
            ["expectedDestinationItemsLocator"] = expectedDestinationItemsLocator,
            ["siloLocator"]                    = siloLocator,
            ["itemsLocator"]                    = itemsLocator:copy(),
        },
    })

    -- test
    local scheduleResult = silo:storeItemsFrom_ASrv({
        itemsLocator    = itemsLocator,
    }, callback)
    assert(scheduleResult == true, "failed to schedule async service")
end

function T_Silo.T_storeItemsFrom_ASrv_Turtle()
    -- prepare test
    local itemsLocator = enterprise_turtle.GetHostLocator_Att()
    itemsLocator:setPort(os.getComputerID())

    -- test
    storeItemsFrom_ASrv_Test(itemsLocator, "Turtle")
end

function T_Silo.T_storeItemsFrom_ASrv_Silo()
    -- prepare test
    local silo2 = T_Silo.CreateSilo(location2:getRelativeLocation(2, 5, 0)) if not silo2 then corelog.Error("failed obtaining silo 2") return end
    local itemsLocator = enterprise_chests.SaveSilo(silo2)

    -- test
    storeItemsFrom_ASrv_Test(itemsLocator, "Silo")
end

function T_Silo.storeItemsFrom_ASrv_Callback(callbackData, serviceResults)
    -- test (cont)
    assert(serviceResults.success, "failed executing async service")

    local destinationItemsLocator = URL:new(serviceResults.destinationItemsLocator)
    local expectedDestinationItemsLocator = URL:new(callbackData["expectedDestinationItemsLocator"])
    assert(destinationItemsLocator:isSame(expectedDestinationItemsLocator), "gotten destinationItemsLocator(="..textutils.serialize(destinationItemsLocator, compact)..") not the same as expected(="..textutils.serialize(expectedDestinationItemsLocator, compact)..")")

    -- cleanup test
    local siloLocator = callbackData["siloLocator"]
    enterprise_chests.RemoveSilo(siloLocator)
    local itemsLocator = callbackData["itemsLocator"]
    if enterprise_chests.IsSiloURL_QSrv({ aURL = itemsLocator}).success then
        enterprise_chests.RemoveSilo(itemsLocator)
    end

    -- end
    return true
end

function T_Silo.T_needsTo_ProvideItemsTo_SSrv()
    -- prepare test
    corelog.WriteToLog("* Silo:needsTo_ProvideItemsTo_SSrv() tests")
    local silo = T_Silo.CreateSilo() if not silo then corelog.Error("failed obtaining silo") return end
    local provideItems = {
        ["minecraft:birch_log"]  = 5,
    }
    local itemDepotLocator = enterprise_turtle.GetHostLocator_Att()
    local itemDepotLocation = Location:new(coremove.GetLocation())

    -- test
    local needsTo_Provide = silo:needsTo_ProvideItemsTo_SSrv({
        provideItems    = provideItems,
        itemDepotLocator= itemDepotLocator,
    })
    local expectedFuelNeed = 1 * role_fuel_worker.NeededFuelToFrom(itemDepotLocation, silo:getLocation())
    assert(needsTo_Provide.success, "needsTo_ProvideItemsTo_SSrv failed")
    assert(needsTo_Provide.fuelNeed == expectedFuelNeed, "fuelNeed(="..needsTo_Provide.fuelNeed..") not the same as expected(="..expectedFuelNeed..")")
    assert(#needsTo_Provide.ingredientsNeed == 0, "ingredientsNeed(="..#needsTo_Provide.ingredientsNeed..") not the same as expected(=0)")

    -- cleanup test
end

function T_Silo.T_can_ProvideItems_QSrv()
    -- prepare test
    corelog.WriteToLog("* Silo:can_ProvideItems_QSrv() tests")
    local inventory = Inventory:new({
        _slotTable = {
            { name = "minecraft:dirt", count = 20 },
        }
    })
    local silo = T_Silo.CreateSilo(location1, accessDirection1, inventory) if not silo then corelog.Error("failed obtaining silo") return end

    -- test can
    local itemName = "minecraft:dirt"
    local itemCount = 10
    local serviceResults = silo:can_ProvideItems_QSrv({ provideItems = { [itemName] = itemCount} })
    assert(serviceResults.success, "can_ProvideItems_QSrv incorrectly failed for "..itemCount.." "..itemName.."'s")

    -- test can not
    itemName = "minecraft:furnace"
    itemCount = 1
    serviceResults = silo:can_ProvideItems_QSrv({ provideItems = { [itemName] = itemCount} })
    assert(not serviceResults.success, "can_ProvideItems_QSrv incorrectly success for "..itemCount.." "..itemName.."'s")

    -- cleanup test
end

return T_Silo
