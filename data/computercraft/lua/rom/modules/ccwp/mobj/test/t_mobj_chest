local T_Chest = {}
local corelog = require "corelog"
local coreutils = require "coreutils"
local coremove = require "coremove"

local role_fuel_worker = require "role_fuel_worker"

local Callback = require "obj_callback"
local ModuleRegistry = require "module_registry"
local moduleRegistry = ModuleRegistry:getInstance()

local Location = require "obj_location"
local Inventory = require "obj_inventory"
local URL = require "obj_url"

local Chest = require "mobj_chest"

local enterprise_chests = require "enterprise_chests"

local t_turtle = require "test.t_turtle"

function T_Chest.T_All()
    -- interfaces
    T_Chest.T_ImplementsIObj()
    T_Chest.T_ImplementsIItemSupplier()
    T_Chest.T_ImplementsIItemDepot()

    -- base methods
    T_Chest.T_Getters()
    T_Chest.T_isTypeOf()
    T_Chest.T_isSame()
    T_Chest.T_copy()

    -- IItemSupplier methods
    T_Chest.T_needsTo_ProvideItemsTo_SOSrv()
    T_Chest.T_can_ProvideItems_QOSrv()
end

local location1  = Location:new({_x= -6, _y= 0, _z= 1, _dx=0, _dy=1})
local location2  = Location:new({_x= -6, _y= 6, _z= 1, _dx=0, _dy=1})
local accessDirection1 = "top"
local inventory1 = Inventory:new() -- ToDo: add elements

local compact = { compact = true }

--    _       _             __
--   (_)     | |           / _|
--    _ _ __ | |_ ___ _ __| |_ __ _  ___ ___  ___
--   | | '_ \| __/ _ \ '__|  _/ _` |/ __/ _ \/ __|
--   | | | | | ||  __/ |  | || (_| | (_|  __/\__ \
--   |_|_| |_|\__\___|_|  |_| \__,_|\___\___||___/

local function ImplementsInterface(interfaceName)
    -- prepare test
    corelog.WriteToLog("* Chest "..interfaceName.." interface test")
    local Interface = moduleRegistry:getModule(interfaceName)
    local obj = T_Chest.CreateChest() if not obj then corelog.Error("failed obtaining Chest") return end

    -- test
    local implementsInterface = Interface.ImplementsInterface(obj)
    assert(implementsInterface, "Chest class does not (fully) implement "..interfaceName.." interface")

    -- cleanup test
end

function T_Chest.T_ImplementsIObj()
    ImplementsInterface("IObj")
end

function T_Chest.T_ImplementsIItemSupplier()
    ImplementsInterface("IItemSupplier")
end

function T_Chest.T_ImplementsIItemDepot()
    ImplementsInterface("IItemDepot")
end

--    _                                     _   _               _
--   | |                                   | | | |             | |
--   | |__   __ _ ___  ___   _ __ ___   ___| |_| |__   ___   __| |___
--   | '_ \ / _` / __|/ _ \ | '_ ` _ \ / _ \ __| '_ \ / _ \ / _` / __|
--   | |_) | (_| \__ \  __/ | | | | | |  __/ |_| | | | (_) | (_| \__ \
--   |_.__/ \__,_|___/\___| |_| |_| |_|\___|\__|_| |_|\___/ \__,_|___/

function T_Chest.T_Getters()
    -- prepare test
    corelog.WriteToLog("* Chest getter tests")
    local id = coreutils.NewId()
    local className = "Chest"
    local obj = T_Chest.CreateChest(location1, accessDirection1, inventory1, id) if not obj then corelog.Error("failed obtaining Chest") return end

    -- test
    assert(obj:getClassName() == className, "gotten className(="..obj:getClassName()..") not the same as expected(="..className..")")
    assert(obj:getId() == id, "gotten id(="..obj:getId()..") not the same as expected(="..id..")")
    assert(obj:getLocation() == location1, "gotten getLocation(="..textutils.serialize(obj:getId())..") not the same as expected(="..textutils.serialize(location1)..")")
    assert(obj:getAccessDirection() == accessDirection1, "gotten getAccessDirection(="..obj:getAccessDirection()..") not the same as expected(="..accessDirection1..")")
    assert(obj:getInventory():isSame(inventory1), "gotten getInventory(="..textutils.serialize(obj:getInventory(), compact)..") not the same as expected(="..textutils.serialize(inventory1, compact)..")")

    -- cleanup test
end

function T_Chest.CreateChest(location, accessDirection, inventory, id)
    -- check input
    location = location or location1
    id = id or coreutils.NewId()
    accessDirection = accessDirection or accessDirection1
    inventory = inventory or inventory1

    -- create Chest object
    local obj = Chest:new({
        _id                     = id,

        _location               = location,
        _accessDirection        = accessDirection,
        _inventory              = inventory,
    })

    -- end
    return obj
end

function T_Chest.T_isTypeOf()
    -- prepare test
    corelog.WriteToLog("* Chest:isTypeOf() tests")
    local obj = T_Chest.CreateChest() if not obj then corelog.Error("failed obtaining Chest") return end

    -- test valid
    local isTypeOf = Chest:isTypeOf(obj)
    local expectedIsTypeOf = true
    assert(isTypeOf == expectedIsTypeOf, "gotten isTypeOf(="..tostring(isTypeOf)..") not the same as expected(="..tostring(expectedIsTypeOf)..")")

    -- test different object
    isTypeOf = Chest:isTypeOf("a atring")
    expectedIsTypeOf = false
    assert(isTypeOf == expectedIsTypeOf, "gotten isTypeOf(="..tostring(isTypeOf)..") not the same as expected(="..tostring(expectedIsTypeOf)..")")

    -- test invalid _location
    obj._location = "a string"
    isTypeOf = Chest:isTypeOf(obj)
    expectedIsTypeOf = false
    assert(isTypeOf == expectedIsTypeOf, "gotten isTypeOf(="..tostring(isTypeOf)..") not the same as expected(="..tostring(expectedIsTypeOf)..")")
    obj._location = location1

    -- test invalid _accessDirection
    obj._accessDirection = 20
    isTypeOf = Chest:isTypeOf(obj)
    expectedIsTypeOf = false
    assert(isTypeOf == expectedIsTypeOf, "gotten isTypeOf(="..tostring(isTypeOf)..") not the same as expected(="..tostring(expectedIsTypeOf)..")")
    obj._accessDirection = accessDirection1

    -- test invalid _inventory
    obj._inventory = 20
    isTypeOf = Chest:isTypeOf(obj)
    expectedIsTypeOf = false
    assert(isTypeOf == expectedIsTypeOf, "gotten isTypeOf(="..tostring(isTypeOf)..") not the same as expected(="..tostring(expectedIsTypeOf)..")")
    obj._inventory = inventory1

    -- cleanup test
end

function T_Chest.T_isSame()
    -- prepare test
    corelog.WriteToLog("* Chest:isSame() tests")
    local id = coreutils.NewId()
    local obj = T_Chest.CreateChest(location1, accessDirection1, inventory1, id) if not obj then corelog.Error("failed obtaining Chest") return end

    -- test same
    local obj1 = T_Chest.CreateChest(location1, accessDirection1, inventory1, id)
    local isSame = obj1:isSame(obj)
    local expectedIsSame = true
    assert(isSame == expectedIsSame, "gotten isSame(="..tostring(isSame)..") not the same as expected(="..tostring(expectedIsSame)..")")

    -- test different _location
    obj._location = Location:new({_x= 100, _y= 0, _z= 100, _dx=0, _dy=1})
    isSame = obj1:isSame(obj)
    expectedIsSame = false
    assert(isSame == expectedIsSame, "gotten isSame(="..tostring(isSame)..") not the same as expected(="..tostring(expectedIsSame)..")")
    obj._location = location1

    -- test different _accessDirection
    obj._accessDirection = "bottom"
    isSame = obj1:isSame(obj)
    expectedIsSame = false
    assert(isSame == expectedIsSame, "gotten isSame(="..tostring(isSame)..") not the same as expected(="..tostring(expectedIsSame)..")")
    obj._accessDirection = accessDirection1

    -- test different _itemsInventory
    obj._inventory = { "ToDo: add some elements here" } -- ToDo
    isSame = obj1:isSame(obj)
    expectedIsSame = false
    assert(isSame == expectedIsSame, "gotten isSame(="..tostring(isSame)..") not the same as expected(="..tostring(expectedIsSame)..")")
    obj._inventory = inventory1

    -- cleanup test
end

function T_Chest.T_copy()
    -- prepare test
    corelog.WriteToLog("* Chest:copy() tests")
    local obj = T_Chest.CreateChest(location1, accessDirection1, inventory1) if not obj then corelog.Error("failed obtaining Chest") return end

    -- test
    local copy = obj:copy()
    assert(copy:isSame(obj), "gotten copy(="..textutils.serialize(copy, compact)..") not the same as expected(="..textutils.serialize(obj, compact)..")")

    -- cleanup test
end

